<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), root_url, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_text"), root_url %></li>
        <li><%= link_to t(".help_text"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users_text"), users_path %></li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account_text") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_text"), current_user %></li>
              <li><%= link_to t(".settings_text"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".signout_text"), logout_path,
                    data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".signin_text"), login_path %></li>
        <% end %>
        <li><%= link_to Settings.languages.en, locale:"en" %></li>
        <li><%= link_to Settings.languages.vi, locale:"vi" %></li>
      </ul>
    </nav>
  </div>
</header>
