<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <% if micropost.image.attached? %>
      <%= image_tag micropost.image.variant(:display) %>
    <% end %>
  </span>
  <span class="timestamp">
    <%= t ".created_time", time_ago: time_ago_in_words(micropost.created_at) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete_text"), micropost,
        data: { "turbo-method": :delete, turbo_confirm: t(".delete_confirm_text") } %>
    <% end %>
  </span>
</li>
