<% provide(:title, t("text.login")) %>
<h1><%= t "text.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with url: login_path, scope: :session, local: true do |f| %>
      <%= f.label :email, t("text.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("text.password") %>
      <%= link_to t(".forgot_pwd_text"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t(".rememberme_text") %></span>
      <% end %>
      <%= f.submit t(".login_text"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %> <%= link_to t(".signup_text"), signup_path %></p>
  </div>
</div>
