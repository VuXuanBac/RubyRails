<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".content_placeholder") %>
  </div>
  <%= f.submit t(".submit_text"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.validation.image_type.join(",") %>
  </span>
<% end %>
