<% provide(:title, t(".title")) %>
<% provide(:action, :edit) %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", object: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="<%= Settings.gravatar_change_link %>" target="_blank" rel="noopener">
        <%= t ".avatar_change_text" %>
      </a>
    </div>
  </div>
</div>
